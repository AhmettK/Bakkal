@model Bakkal.Models.Urunler
@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_Bakkal.cshtml";
}

<html>
<body>
    @using (Html.BeginForm())
    {
    <div class="container">
        @Html.DropDownListFor(i => Model.UrunKategorisi, (List<SelectListItem>)ViewBag.kat, new { @class = "form-control" })
        @Html.TextBoxFor(i => Model.UrunAdi, new { @style = "position:absolute;left:500px;top:70px", @class = "form-control", @Placeholder = "Ürün Adı" })
        @Html.TextBoxFor(i => Model.UrunFiyati, new { @class = "form-control", @style = "position:absolute;left:800px;top:70px", @Placeholder = "Fiyat" })
        @Html.TextBoxFor(i => Model.Stok, new { @style = "position:absolute;left:1100px;top:70px", @class = "form-control", @Placeholder = "Stok" })
        <input type="submit" class="btn btn-info" value="Ekle" style="position:absolute;left:1400px;top:70px" />
    </div>
    }
</body>
</html>

