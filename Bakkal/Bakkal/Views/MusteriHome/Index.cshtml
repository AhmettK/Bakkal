
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>

<head>
    <style>

        div.alert-warning {
            height: 100%;
        }

        div.alert-danger {
            height: 100%;
        }
    </style>
</head>

<body>
    <div class="container">
        <div id="carousel" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carousel" data-slide-to="0"></li>
                <li data-target="#carousel" data-slide-to="1"></li>
                <li data-target="#carousel" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="item active">
                    <img src="https://previews.123rf.com/images/genestro/genestro1707/genestro170700027/82829150-online-shop-banner-shop-building-icon-online-grocery-shopping-market-basket-with-a-products-isometri.jpg" class="container-fluid" style="width:1000px;height:541px" />
                    <div class="carousel-caption">

                    </div>
                </div>
                <div class="item">
                    <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn%3AANd9GcTcfsRvAeUYqqa-FtQwzyzQPplzjLKOQ0FBAaKo-v0lnqSzdoHh" class="container-fluid" style="width:1000px;height:541px" />
                    <div class="carousel-caption">

                    </div>
                </div>
                <div class="item">
                    <img src="https://images.twinkl.co.uk/tw1n/image/private/t_630/image_repo/76/cc/T-T-6234-The-Market-Role-Play-Banner.jpg" class="container-fluid" style="width:1000px;height:541px" />
                    <div class="carousel-caption">

                    </div>
                </div>
            </div>
            <a class="left carousel-control" href="#carousel" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Önceki</span>
            </a>
            <a class="right carousel-control" href="#carousel" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Sonraki</span>
            </a>
        </div>
        <br />
        @* ELEMENT *@
        <div class="alert alert-warning">
            <img src="http://www.ceptelefonunaindir.com/uploads/posts/2013-11/1385457159_color-note-icox.jpg" class="col-lg-3" style="width:13%" />
            <h2 class="text-center" style="font-family:'Courier New';color:darksalmon;font-weight:bold">NOT</h2>
            <h4 style="color:darksalmon;font-family:'Courier New';">Alışveriş yaparken önce ürün seçmeniz birden fazla bakkala ait sipariş oluşturmanıza neden olacağından fazla para ödemenize sebep olabilir.</h4>
        </div>
        <div class="alert alert-danger">
            <img src="https://cdn.pixabay.com/photo/2018/06/12/15/06/question-mark-3470780_960_720.jpg" class="col-lg-3" style="width:20%" />
            <h2 class="text-center" style="font-family:'Courier New';color:brown;font-weight:bold">Neden Bakkallıyorum?</h2>
            <h4 style="font-family:'Courier New';color:brown;">
                Almak istediğiniz ürünlerin markasını ve fiyatını bilmek en doğal hakkınız bu yüzden hep beraber bakkallıyoruz.
            </h4>
        </div>
    </div>
</body>

</html>

