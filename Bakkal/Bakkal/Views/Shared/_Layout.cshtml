<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body @*style="background-color:#E46664"*@ style="background-color:cadetblue">
    <nav class="navbar navbar-fixed-top" style="background-color:powderblue">
        <div class="container">
            <div class="navbar-header">
                &nbsp;<a class="navbar-brand" href="/MusteriHome/Index">Bakkallıyorum</a>
            </div>
            <ul class="nav navbar-nav">
                <li><a href="/MusteriBakkal/Index">Bakkal Seç</a></li>
                @*<li><a href="/MusteriUrunler/Index">Ürünler</a></li>*@
