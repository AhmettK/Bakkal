                <li><a href="/MusteriSiparis/About">Geçmiş Siparişlerim</a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                @if (Session["useradi"] == null)
                {
                    <li><a href="/SignUp/Index"><span class="glyphicon glyphicon-user"></span> Üye Ol</a></li>
                    <li><a href="/Login/Index"><span class="glyphicon glyphicon-log-in"></span> Giriş</a></li>
                }
                else
                {
                    <li><a href="/MusteriHome/MHesap"><span class="glyphicon glyphicon-user"></span> @Session["useradi"].ToString()</a></li>
                }

                <li><a href="/Sepet/Index"><span class="glyphicon glyphicon-shopping-cart"></span></a></li>
            </ul>
            @*<form class="form-inline col-md-offset-6">
                    <div class="form-control-static">
