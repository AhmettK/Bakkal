@using Bakkal.Models
@model List<Yeni>
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<body>
    <div class="container">
        @using (Html.BeginForm())
        {
            <table class="table table-striped">
                <thead>
                    <tr class="bg-primary">
                        <th>Ürün Adı</th>
                        <th>Ürün Fiyatı</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="bg-info">
                            <th>@item.UrunAdi</th>
                            <th>@item.UrunFiyati ₺</th>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</body>
</html>

